{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
               "ecmaVersion": 8,
                "ecmaFeatures": {
                   "ecmaVersion": 8,
                    "experimentalObjectRestSpread": true,
                    "jsx": true
                },
                "sourceType": "module"
            },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off"
    }
}